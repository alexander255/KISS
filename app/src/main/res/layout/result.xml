<?xml version="1.0" encoding="utf-8"?>
<fr.neamar.kiss.ui.ResultView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:descendantFocusability="blocksDescendants"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingBottom="@dimen/result_margin_bottom"
	android:paddingLeft="@dimen/result_margin_left"
	android:paddingRight="@dimen/result_margin_right"
	android:paddingTop="@dimen/result_margin_top">

	<ImageView
		android:id="@+id/result_icon"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_centerInParent="false"
		android:layout_centerVertical="true"
		android:layout_marginBottom="@dimen/icon_margin_bottom"
		android:layout_marginLeft="@dimen/icon_margin_left"
		android:layout_marginRight="@dimen/icon_margin_right"
		android:layout_marginTop="@dimen/icon_margin_top"
		android:contentDescription="@null"
		tools:src="@drawable/ic_launcher" />

	<ImageView
		android:id="@+id/result_subicon"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignBottom="@+id/result_icon"
		android:layout_alignEnd="@+id/result_icon"
		android:layout_alignRight="@+id/result_icon"
		android:layout_marginRight="-4dp"
		android:layout_marginTop="-4dp"
		android:contentDescription="@null"
		tools:src="@drawable/ic_launcher" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toEndOf="@+id/result_icon"
		android:layout_toLeftOf="@+id/result_extras"
		android:layout_toRightOf="@+id/result_icon"
		android:layout_toStartOf="@+id/result_extras"
		android:orientation="vertical">

		<TextView
			android:id="@+id/result_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:paddingBottom="3dp"
			android:text="@null"
			android:textColor="?attr/resultColor"
			android:textSize="@dimen/result_title_size" />

		<TextView
			android:id="@+id/result_subtext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="-6dp"
			android:ellipsize="end"
			android:text="@null"
			android:textColor="?android:attr/textColorSecondary" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/result_extras"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:orientation="horizontal" />
</fr.neamar.kiss.ui.ResultView>
